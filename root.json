{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Biswajit test JSON Schema",
    "description": "Test JSON Schema",
    "$ref": "#/definitions/Welcome",
    "definitions": {
        "Welcome": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name",
                "order",
                "pin",
                "country",
                "city"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "name of the person"
                },
                "order": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "location": {
                    "type": "string",
                    "description": "location is an optional field"
                },
                "hoddysize": {
                    "type": "integer",
                    "exclusiveMinimum": 0,
                    "description": "hoddysize is an optional field"
                },
                "pin": {
                    "type": "integer",
                    "minimum": 600,
                    "maximum": 799999
                },
                "country": {
                    "$id": "#/properties/country",
                    "type": "string",
                    "title": "cititenship country",
                    "description": "country",
                    "default": "Unknown",
                    "enum": [
                        "india",
                        "us",
                        "uk",
                        "china",
                        "brazil",
                        "chand",
                        "ghana",
                        "vatican",
                        "sanmarino",
                        "Unknown"
                    ],
                    "examples": [
                        "india",
                        "us",
                        "uk",
                        "china",
                        "brazil",
                        "chand",
                        "ghana",
                        "vatican",
                        "sanmarino",
                        "Unknown"
                    ]
                },
                "city": {
                    "$id": "#/properties/city",
                    "type": "string",
                    "title": "city name",
                    "description": "city",
                    "default": "Unknown",
                    "enum": [
                        "kolkata",
                        "bangalore",
                        "london",
                        "newyork",
                        "bajing",
                        "capetown",
                        "colombo",
                        "dhaka",
                        "korachi",
                        "Unknown"
                    ],
                    "examples": [
                        "kolkata",
                        "bangalore",
                        "london",
                        "newyork",
                        "bajing",
                        "capetown",
                        "colombo",
                        "dhaka",
                        "korachi",
                        "Unknown"
                    ]
                }
            }
        }
    }
}
